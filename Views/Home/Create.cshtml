@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    <div class="container">
        <h2>Create</h2>
        <div class="row">
            <form>

                <div class="Centrar">
                    <div class="mb-3">
                        <label for="titleID" class="form-label">title</label>
                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="mb-3">
                        <label for="descriptionID" class="form-label">description</label>
                        @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = 3 })
                    </div>
                    <div class="mb-3">
                        <label for="excerptID" class="form-label">excerpt</label>
                        @Html.TextAreaFor(model => model.excerpt, new { @class = "form-control", rows = 3 })
                    </div>
                    <div class="mb-3">
                        <label for="publishDateID" class="form-label">publishDate</label>
                        @*<input type="date" class="form-control" id="publishDateID">*@
                        @Html.EditorFor(model => model.description, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </form>
        </div>
    </div>

}
<style>

    .Centrar {
        width: 30%;
    }
</style>
