@using (Html.BeginForm("Buscar", "Home", FormMethod.Post))
{


    <div class="container">
        <label for="forMonto" class="form-label">Buscar</label>
        <div class="row">
            <div class="col-lg-6">
                <div class="input-group Centrarbotones">

                    @Html.EditorFor(model => model.id, new { htmlAttributes = new { @type = "number", @class = "form-control" } })


                    <button type="submit" class="btn btn-light">Buscar</button>
                </div>
            </div>

        </div>
    </div>
}

<br />
<div class="container">

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Titulo</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Excerpt</th>
                <th scope="col">Dia de Publicacion</th>
                <th scope="col">Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in registrosValues.Valores)
            {
                <tr>
                    <td>@item.id - @item.title</td>

                    <td>@item.descriptiontemp</td>
                    <td>@item.excerpttemp</td>
                    <td>@item.publishDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @*<button type="button" class="btn btn-light">Editar</button>*@
                        @Html.ActionLink("Editar", "Update", "Home",  new { Id = item.id }) |
                        @Html.ActionLink("Detalle", "Detalles", new { Id = item.id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { Id = item.id }) |
                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>

